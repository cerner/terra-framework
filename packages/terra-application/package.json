  },
  "dependencies": {
    "classnames": "^2.2.5",
    "prop-types": "^15.5.8",
    "terra-doc-template": "^2.0.0",
    "terra-base": "^4.0.0",
    "terra-breakpoints": "^2.0.0",
    "terra-disclosure-manager": "^4.0.0",
