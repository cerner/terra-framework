  "peerDependencies": {
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-intl": "^2.8.0",
    "terra-disclosure-manager": "^4.9.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "prop-types": "^15.5.8",
    "react-router-dom": "^5.0.0",
    "terra-application-header-layout": "^3.30.0",
    "terra-application-links": "^6.40.0",
    "terra-application-menu-layout": "^3.25.0",
